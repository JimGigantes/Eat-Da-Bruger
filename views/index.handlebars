<div class="container">
   <div class="row">
      <div class="col-md-12 text-center" id="top-bar">
              <img src="http://freepngimages.com/wp-content/uploads/2016/11/bacon-burger.png" height="200" class="center-block">
            <h1 class="text-center title">Eat-Da-Burger!</h1>
      </div>
   </div>

  <br>

  <div class="row justify-content-center">
    <div class="col-md-6">
     
<h2>Burgers that haven't been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6">
<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="row justify-content-center">
<h2>Add a burger</h2>
</div>
<div class="row justify-content-center">
<br>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>
